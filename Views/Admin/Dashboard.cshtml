@{
    Layout = "_Layout";
    ViewData["Title"] = "Painel de Controlo";
}

<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1>Painel de Controlo</h1>
        <a asp-action="Logout" class="btn btn-secondary">Sair</a>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
        <div style="background: var(--card); padding: 2rem; border-radius: 8px; border: 1px solid var(--border); text-align: center;">
            <i class="bi bi-geo-alt" style="font-size: 3rem; color: var(--primary);"></i>
            <h3 style="margin: 1rem 0;">@ViewBag.TotalDestinations Destinos</h3>
            <a asp-action="Destinos" class="btn btn-primary">Gerir Destinos</a>
        </div>

        <div style="background: var(--card); padding: 2rem; border-radius: 8px; border: 1px solid var(--border); text-align: center;">
            <i class="bi bi-calendar-check" style="font-size: 3rem; color: var(--primary);"></i>
            <h3 style="margin: 1rem 0;">@ViewBag.TotalBookings Reservas</h3>
            <a asp-action="Reservas" class="btn btn-primary">Ver Reservas</a>
        </div>

        <div style="background: var(--card); padding: 2rem; border-radius: 8px; border: 1px solid var(--border); text-align: center;">
            <i class="bi bi-people" style="font-size: 3rem; color: var(--primary);"></i>
            <h3 style="margin: 1rem 0;">@ViewBag.TotalClientes Clientes</h3>
            <a asp-action="Clientes" class="btn btn-primary">Gerir Clientes</a>
        </div>
    </div>
</div>
