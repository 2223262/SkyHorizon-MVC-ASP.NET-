@model SkyHorizon_2223262.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Registar";
}

<div class="container" style="max-width: 500px; margin-top: 100px;">
    <div style="background: var(--card); padding: 2rem; border-radius: 8px; border: 1px solid var(--border);">
        <h2 style="text-align: center; margin-bottom: 2rem;">Criar Conta</h2>
        
        @if (ViewBag.Error != null)
        {
            <div style="color: #ff4d4d; margin-bottom: 1rem; text-align: center; padding: 0.75rem; background: rgba(255, 77, 77, 0.1); border-radius: 4px; border: 1px solid #ff4d4d;">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Registar" method="post">
            <div style="margin-bottom: 1rem;">
                <label style="display: block; margin-bottom: 0.5rem; color: var(--muted);">Nome de Utilizador</label>
                <input type="text" asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" style="color: #ff4d4d; font-size: 0.85rem;"></span>
            </div>
            
            <div style="margin-bottom: 1rem;">
                <label style="display: block; margin-bottom: 0.5rem; color: var(--muted);">Email</label>
                <input type="email" asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" style="color: #ff4d4d; font-size: 0.85rem;"></span>
            </div>
            
            <div style="margin-bottom: 1rem;">
                <label style="display: block; margin-bottom: 0.5rem; color: var(--muted);">Palavra-passe</label>
                <input type="password" asp-for="Password" class="form-control" required minlength="4" />
                <span asp-validation-for="Password" style="color: #ff4d4d; font-size: 0.85rem;"></span>
                <small style="color: var(--muted); font-size: 0.8rem;">Mínimo 4 caracteres</small>
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">Criar Conta</button>
        </form>

        <div style="margin-top: 1.5rem; text-align: center; padding-top: 1.5rem; border-top: 1px solid var(--border);">
            <p style="color: var(--muted); margin-bottom: 0.5rem;">Já tem conta?</p>
            <a asp-controller="Home" asp-action="Login" class="btn btn-secondary" style="display: inline-block; color: var(--foreground);">Entrar</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
