@model IEnumerable<SkyHorizon_2223262.Models.Destination>
@{
    ViewData["Title"] = "Destinos";
}

<style>
    .destinations-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .destination-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .destination-card:hover {
        transform: translateY(-10px);
        border-color: var(--primary);
    }

    .destination-image {
        height: 200px;
        background-size: cover;
        background-position: center;
    }

    .destination-info {
        padding: 1.5rem;
    }

    .destination-info h3 {
        margin-bottom: 0.5rem;
    }

    .destination-info p {
        color: var(--muted);
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container">
    <h2 style="text-align: center; margin-bottom: 1rem;">Nossos Destinos</h2>
    <p style="text-align: center; color: var(--muted);">Explore destinos incr√≠veis ao redor do mundo.</p>

    <div class="destinations-grid">
        @foreach (var dest in Model)
        {
            <div class="destination-card">
                <div class="destination-image" style="background-image: url('@Url.Content("~/images/" + dest.Image)'), url('https://via.placeholder.com/400x200?text=Image+Not+Found')"></div>
                <div class="destination-info">
                    <h3>@dest.Name, @dest.Country</h3>
                    <p>@dest.Description</p>
                    <a asp-controller="Home" asp-action="DetalheDestino" asp-route-id="@dest.Id" class="btn btn-primary" style="width: 100%; text-decoration: none; display: block; text-align: center;">Reservar Agora</a>
                </div>
            </div>
        }
    </div>
</div>
